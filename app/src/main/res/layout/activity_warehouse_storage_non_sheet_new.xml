<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.delta.android.WMS.Client.WarehouseStorageNonSheetNewActivity">

    <!-- 表頭資料 -->
    <LinearLayout
        android:id="@+id/Tab1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <!--入庫類型-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_control_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvWarehouoseSheetType"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:layout_marginRight="5dp"
                android:textAlignment="textStart"
                android:text="@string/SHEET_TYPE" />

            <Spinner
                android:id="@+id/cmbWarehouseSheetType"
                android:layout_width="0dp"
                android:layout_weight="6.5"
                style="@style/CommonSpinnerRequired" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_control_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOrgan"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:layout_marginRight="5dp"
                android:textAlignment="textStart"
                android:text="@string/ORGAN" />

            <Spinner
                android:id="@+id/cmbOrgan"
                android:layout_width="0dp"
                android:layout_weight="6.5"
                style="@style/CommonSpinner" />
        </LinearLayout>
    </LinearLayout>

    <!-- 新增入庫明細Button -->
    <Button
        android:id="@+id/btnAddWarehousStorageDet"
        style="@style/CommonRoundedButton"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:text="@string/ADD_WS_DET" />

</RelativeLayout>

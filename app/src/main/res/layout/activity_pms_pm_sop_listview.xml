<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSopId1"
            style="@style/CommonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SOP_ID" />

        <TextView
            android:id="@+id/tvSopId12"
            style="@style/CommonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="：" />

        <TextView
            android:id="@+id/tvSopId"
            style="@style/CommonTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSopName1"
            style="@style/CommonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SOP_NAME" />

        <TextView
            android:id="@+id/tvSopName2"
            style="@style/CommonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="：" />

        <TextView
            android:id="@+id/tvSopName"
            style="@style/CommonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDocNo1"
            style="@style/CommonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DOC_NO" />

        <TextView
            android:id="@+id/tvDocNo2"
            style="@style/CommonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="：" />

        <TextView
            android:id="@+id/tvDocNo"
            style="@style/CommonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFullFileName1"
            style="@style/CommonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/FULL_FILE_NAME" />

        <TextView
            android:id="@+id/tvFullFileName2"
            style="@style/CommonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="：" />

        <TextView
            android:id="@+id/tvFullFileName"
            style="@style/CommonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>
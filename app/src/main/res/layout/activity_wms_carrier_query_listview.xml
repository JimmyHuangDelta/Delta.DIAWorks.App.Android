<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WmsTextStartMargin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9.3"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <!-- Carrier 代碼-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/lvTxtCarrierId"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:text="@string/CARRIER_ID"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lvTxtCarrierIdVal"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.5"
                android:text="@string/CARRIER_ID"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- 載具種類 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/lvTxtCarrierKind"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:gravity="start|center_vertical"
                android:text="@string/CARRIER_KIND"
                android:textAlignment="textStart"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lvTxtCarrierKindVal"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.5"
                android:gravity="start|center_vertical"
                android:text="@string/CARRIER_KIND"
                android:textAlignment="textStart"/>
        </LinearLayout>

        <!-- 固定位置代碼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/lvTxtFixedPosition"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:gravity="start|center_vertical"
                android:text="@string/FIXED_LOCATION"
                android:textAlignment="textStart"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lvTxtFixedPositionVal"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.5"
                android:gravity="start|center_vertical"
                android:text="@string/FIXED_LOCATION"
                android:textAlignment="textStart"/>
        </LinearLayout>

        <!-- 位置 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/lvTxtLocation"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:gravity="start|center_vertical"
                android:text="@string/LOCATION_ID"
                android:textAlignment="textStart"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lvTxtLocationVal"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.5"
                android:gravity="start|center_vertical"
                android:text="@string/LOCATION_ID"
                android:textAlignment="textStart"/>
        </LinearLayout>

        <!-- 搬送狀態 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/lvTxtTransportStatus"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:gravity="start|center_vertical"
                android:text="@string/TRANSPORT_STATUS"
                android:textAlignment="textStart"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lvTxtTransportStatusVal"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.5"
                android:gravity="start|center_vertical"
                android:text="@string/TRANSPORT_STATUS"
                android:textAlignment="textStart"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_common_chevron_right_black_32dp" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.delta.android.PMS.Client.PmWoSelectActivity">

    <LinearLayout
        android:id="@+id/llWorkQuery"
        style="@style/CommonLinearLayoutGroupBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_control_margin"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etWorkId"
            style="@style/PmsEditTextNormal"
            android:layout_width="match_parent"
            android:ems="10"
            android:hint="@string/SEARCH"
            android:singleLine="true" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvWorkData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

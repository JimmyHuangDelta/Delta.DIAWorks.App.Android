<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:orientation="vertical">

        <LinearLayout
            style="@style/WmsTextStartMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!--批號-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLotId"
                        style="@style/WmsTextViewGridTitle"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/SKU_ID" />

                    <TextView
                        android:id="@+id/tvPickLotId"
                        style="@style/WmsTextViewGridTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/LOT" />
                </LinearLayout>

                <!--料號-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemId"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ITEM_ID" />

                    <TextView
                        android:id="@+id/tvPickItemId"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Item ID" />
                </LinearLayout>

                <!--物料名稱-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemName"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ITEM_NAME" />

                    <TextView
                        android:id="@+id/tvPickItemName"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Item Name" />
                </LinearLayout>

                <!--數量-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvQty"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/QTY" />

                    <TextView
                        android:id="@+id/tvPickQty"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Qty" />
                </LinearLayout>

                <!--儲位-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvBin"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/BIN_ID" />

                    <TextView
                        android:id="@+id/tvBinID"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="BIN_ID" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
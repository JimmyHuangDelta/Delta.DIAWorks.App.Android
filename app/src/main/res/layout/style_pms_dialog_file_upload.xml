<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            style="@style/CommonLinearLayoutGroupBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_control_margin"
                android:orientation="horizontal">

                <TextView
                    style="@style/CommonTextView"
                    android:layout_width="wrap_content"
                    android:layout_weight="0.1"
                    android:text="@string/FILE_NAME" />

                <EditText
                    android:id="@+id/edFileName"
                    style="@style/PmsEditTextNecessary"
                    android:layout_width="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnSelectFile"
                    style="@style/CommonButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_marginLeft="10dp"
                    android:text="@string/SELECT_FIEL" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_control_margin"
                android:orientation="horizontal">

                <TextView
                    style="@style/CommonTextView"
                    android:layout_width="wrap_content"
                    android:text="@string/FILE_DESC" />

                <EditText
                    android:id="@+id/edFileUploadCmt"
                    style="@style/PmsEditTextNormal"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            style="@style/CommonButton"
            android:layout_weight="1"
            android:text="@string/CANCEL" />

        <Button
            android:id="@+id/btnConfirm"
            style="@style/CommonButton"
            android:layout_weight="1"
            android:text="@string/CONFIRM" />
    </LinearLayout>

</LinearLayout>
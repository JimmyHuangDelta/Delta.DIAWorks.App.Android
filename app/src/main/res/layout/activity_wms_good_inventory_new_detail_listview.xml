<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/common_control_margin">

        <!-- 存貨層級 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSkuLevel2"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/SKU_LEVEL" />

            <TextView
                android:id="@+id/tvSkuLevel"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="@string/SKU_LEVEL" />

        </LinearLayout>

        <!-- 存貨編號 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSkuNum2"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/SKU_NUM" />

            <TextView
                android:id="@+id/tvSkuNum"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="@string/SKU_NUM" />

        </LinearLayout>

        <!-- 物料代碼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtItemId2"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/ITEM_ID" />

            <TextView
                android:id="@+id/txtItemId"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="@string/ITEM_ID" />
        </LinearLayout>

        <!-- 物料名稱 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labItem"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/ITEM_NAME" />

            <TextView
                android:id="@+id/txtItemName"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="@string/ITEM" />

        </LinearLayout>

        <!-- 儲位代碼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBinId2"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/BIN_ID" />

            <TextView
                android:id="@+id/tvBinId"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="@string/BIN_ID" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
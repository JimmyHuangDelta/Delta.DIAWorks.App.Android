<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false">

    <LinearLayout
        style="@style/WmsTextStartMargin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvGrDetGridItemId2"
                    style="@style/WmsTextViewGridTitle"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ITEM_ID" />

                <TextView
                    android:id="@+id/tvGrDetGridItemId"
                    style="@style/WmsTextViewGridTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Item ID" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvGrDetGridSheetId2"
                    style="@style/WmsTextViewGridContext"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/SHEET_ID" />

                <TextView
                    android:id="@+id/tvGrDetGridSheetId"
                    style="@style/WmsTextViewGridContext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sheet ID" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvGrDetGridItemName2"
                    style="@style/WmsTextViewGridContext"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ITEM_NAME" />

                <TextView
                    android:id="@+id/tvGrDetGridItemName"
                    style="@style/WmsTextViewGridContext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Item Name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvGrDetGridStorageId2"
                    style="@style/CommonTextView"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="@string/STORAGE_ID" />

                <TextView
                    android:id="@+id/tvGrDetGridStorageId"
                    style="@style/CommonTextView"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Storage ID " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tvGrDetGridLotId2"
                    style="@style/WmsTextViewGridContext"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/LOT_CODE" />

                <TextView
                    android:id="@+id/tvGrDetGridLotId"
                    style="@style/WmsTextViewGridContext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvGrDetGridQty2"
                    style="@style/WmsTextViewGridContext"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/REQUIRE_QTY" />

                <TextView
                    android:id="@+id/tvGrDetGridQty"
                    style="@style/WmsTextViewGridContext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/QTY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvGrDetGridUom2"
                    style="@style/WmsTextViewGridContext"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="@string/UOM_TITLE" />

                <TextView
                    android:id="@+id/tvGrDetGridUom"
                    style="@style/WmsTextViewGridContext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="UOM" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/WmsTextViewGridContext"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/SKIP_QC" />

                <TextView
                    android:id="@+id/tvGrDetGridSkipQc"
                    style="@style/WmsTextViewGridContext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_common_chevron_right_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_common_chevron_right_black_32dp" />


         </RelativeLayout>

    </LinearLayout>
</LinearLayout>
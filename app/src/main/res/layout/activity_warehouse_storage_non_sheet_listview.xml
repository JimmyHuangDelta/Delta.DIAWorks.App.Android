<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:orientation="vertical">

        <LinearLayout
            style="@style/WmsTextStartMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!--料號-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemId2"
                        style="@style/WmsTextViewGridTitle"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ITEM_ID" />

                    <TextView
                        android:id="@+id/tvItemId"
                        style="@style/WmsTextViewGridTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ITEM_ID" />
                </LinearLayout>

                <!--物料名稱-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemName2"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ITEM_NAME" />

                    <TextView
                        android:id="@+id/tvItemName"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Item Name" />
                </LinearLayout>

                <!--倉庫代碼-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStorageId2"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/STORAGE_ID" />

                    <TextView
                        android:id="@+id/tvStorageId"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/STORAGE_ID" />
                </LinearLayout>

                <!--存貨層級-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSkuLevel2"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/SKU_LEVEL" />

                    <TextView
                        android:id="@+id/tvSkuLevel"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/SKU_LEVEL" />
                </LinearLayout>

                <!--存貨編號-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSkuNum2"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/SKU_NUM" />

                    <TextView
                        android:id="@+id/tvSkuNum"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/SKU_NUM" />
                </LinearLayout>

                <!--數量-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvQty2"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/QTY" />

                    <TextView
                        android:id="@+id/tvQty"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/QTY" />
                </LinearLayout>

                <!--製造日期-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMfgDate2"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/MFG_DATE" />

                    <TextView
                        android:id="@+id/tvMfgDate"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/MFG_DATE" />
                </LinearLayout>

                <!--有效日期-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvExpDate2"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/EXP_DATE" />

                    <TextView
                        android:id="@+id/tvExpDate"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/EXP_DATE" />
                </LinearLayout>

                <!--LotCode-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLotCode2"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/LOT_CODE" />

                    <TextView
                        android:id="@+id/tvLotCode"
                        style="@style/WmsTextViewGridContext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/LOT_CODE" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_activity_background"
    tools:context="com.delta.android.Core.Activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                style="@style/CommonLinearLayoutGroupBox"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_control_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/CommonTextView"
                        android:layout_width="100dp"
                        android:text="@string/ACCOUNT" />

                    <EditText
                        android:id="@+id/etUserID"
                        style="@style/CommonEditTextRequired"
                        android:hint="Input"
                        android:inputType="text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_control_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/CommonTextView"
                        android:layout_width="100dp"
                        android:text="@string/PASSWORD" />

                    <EditText
                        android:id="@+id/etPassword"
                        style="@style/CommonEditTextRequired"
                        android:hint="Input"
                        android:inputType="textPassword" />


                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btnLogin"
            style="@style/CommonButton"
            android:text="@string/CONFIRM" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
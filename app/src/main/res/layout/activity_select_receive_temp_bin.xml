<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_activity_background"
    android:orientation="vertical">

    <TextView
        style="@style/WmsTextViewBarTitle"
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/SELECT_IS_BIN_ID" />

    <ListView
        android:id="@+id/lvEntryData"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_above="@id/btnBinConfirm"
        android:layout_below="@id/tvTitle"/>

    <Button
        android:id="@+id/btnBinConfirm"
        android:text="@string/CONFIRM"
        style="@style/CommonButton"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
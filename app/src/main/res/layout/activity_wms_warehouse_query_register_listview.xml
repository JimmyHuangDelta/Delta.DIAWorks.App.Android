<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WmsTextStartMargin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <!-- 批號-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lvTxtLotId"
                style="@style/WmsTextViewGridTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/SKU_ID" />

            <TextView
                android:id="@+id/lvTxtLotIdVal"
                style="@style/WmsTextViewGridTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:text="@string/LOT_ID_TITLE" />
        </LinearLayout>

        <!-- 倉庫 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lvTxtStorageName"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:text="@string/STORAGE_NAME"
                android:textAlignment="textStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lvTxtStorageNameVal"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="start|center_vertical"
                android:text="@string/STORAGE_NAME"
                android:textAlignment="textStart" />
        </LinearLayout>

        <!-- 儲位代碼/儲位名稱 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lvTxtBinId"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:text="@string/BIN_ID"
                android:textAlignment="textStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lvTxtBinIdVal"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="start|center_vertical"
                android:text="@string/BIN_ID"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/lvTxtBinName"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:text="@string/BIN_NAME"
                android:textAlignment="textStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lvTxtBinNameVal"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="start|center_vertical"
                android:text="@string/BIN_NAME"
                android:textAlignment="textStart" />
        </LinearLayout>

        <!-- 料號/物料名稱 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lvTxtItemId"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:text="@string/ITEM_CODE"
                android:textAlignment="textStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lvTxtItemIdVal"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="start|center_vertical"
                android:text="@string/ITEM_CODE"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/lvTxtItemName"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:text="@string/ITEM_NAME"
                android:textAlignment="textStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lvTxtItemNameVal"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="start|center_vertical"
                android:text="@string/ITEM_NAME"
                android:textAlignment="textStart" />
        </LinearLayout>

        <!-- 數量/位置 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lvTxtQty"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:text="@string/QTY"
                android:textAlignment="textStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lvTxtQtyVal"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="start|center_vertical"
                android:text="@string/QTY"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/lvTxtLocation"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:text="@string/LOCATION_ID"
                android:textAlignment="textStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lvTxtLocationVal"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="start|center_vertical"
                android:text=""
                android:textAlignment="textStart" />
        </LinearLayout>

        <!-- 保存期限 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lvTxtExpDate"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:text="@string/EXP_DATE"
                android:textAlignment="textStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lvTxtExpDateVal"
                style="@style/WmsTextViewGridContext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="start|center_vertical"
                android:text="@string/EXP_DATE"
                android:textAlignment="textStart" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
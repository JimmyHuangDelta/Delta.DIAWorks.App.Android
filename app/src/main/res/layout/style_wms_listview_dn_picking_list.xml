<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/llSheetBorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <!-- 項次 -->
        <LinearLayout
            style="@style/WmsTextStartMargin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSeqTitle"
                style="@style/WmsTextViewGridContext"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="@string/SEQ" />

            <TextView
                android:id="@+id/tvSeq"
                style="@style/WmsTextViewGridContext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/SEQ" />

        </LinearLayout>

        <!-- 物料代碼 -->
        <LinearLayout
            style="@style/WmsTextStartMargin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvItemIdTitle"
                style="@style/WmsTextViewGridContext"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="@string/ITEM_ID" />

            <TextView
                android:id="@+id/tvItemId"
                style="@style/WmsTextViewGridContext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/ITEM_ID" />

        </LinearLayout>

        <!-- 物料名稱 -->
        <LinearLayout
            style="@style/WmsTextStartMargin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvItemNameTitle"
                style="@style/WmsTextViewGridContext"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:text="@string/ITEM_NAME"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/tvItemName"
                style="@style/WmsTextViewGridContext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="@string/ITEM_NAME"
                android:textAlignment="textStart" />

        </LinearLayout>

        <!-- 存貨代碼 -->
        <LinearLayout
            style="@style/WmsTextStartMargin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLotIdTitle"
                style="@style/WmsTextViewGridContext"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:text="@string/SKU_ID"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/tvLotId"
                style="@style/WmsTextViewGridContext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="@string/SKU_ID"
                android:textAlignment="textStart" />

        </LinearLayout>

        <!-- 數量 -->
        <LinearLayout
            style="@style/WmsTextStartMargin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvQtyTitle"
                style="@style/WmsTextViewGridContext"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:text="@string/QTY"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/tvQty"
                style="@style/WmsTextViewGridContext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="@string/QTY"
                android:textAlignment="textStart" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
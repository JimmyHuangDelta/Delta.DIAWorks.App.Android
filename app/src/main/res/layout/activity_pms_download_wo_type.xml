<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.delta.android.PMS.Client.DownloadWoTypeActivity">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="25dp"
        android:padding="0dp">

        <ImageButton
            android:id="@+id/btnDownloadPm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/PmsWoSelectButton"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="30dp"
            android:textSize="25dp"
            android:text="@string/PM_WO"
            android:textColor="@color/common_theme_light1"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="25dp"
        android:padding="0dp">

        <ImageButton
            android:id="@+id/btnDownloadRepair"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/PmsWoSelectButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="30dp"
            android:textSize="25dp"
            android:text="@string/REPAIR_WO"
            android:textColor="@color/common_theme_light1"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="25dp"
        android:padding="0dp">

        <ImageButton
            android:id="@+id/btnDownloadInspection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/PmsWoSelectButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="30dp"
            android:textSize="25dp"
            android:text="@string/INSPECTION_WO"
            android:textColor="@color/common_theme_light1"/>

    </FrameLayout>
</LinearLayout>
